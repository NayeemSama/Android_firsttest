<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_ribbon"
    android:backgroundTint="#001C4C"
    android:backgroundTintMode="screen"
    tools:context=".MainActivity">

    <ImageView
        android:src="@drawable/moon_back_blur"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="92dp"
        android:alpha="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:src="@drawable/moon"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:src="@drawable/moon_eclipse"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="108dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/farro_light"
            android:text="Create Account"
            android:textAlignment="center"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textColor="#93A1ED"/>

        <EditText
            android:singleLine="true"
            android:id="@+id/nameREGISTER"
            android:layout_width="1000px"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/edittext_back"
            android:fontFamily="@font/comic_neue_bold"
            android:padding="15dp"
            android:hint="Name"
            android:textSize="25sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/emailREGISTER"
            android:hint="Email"
            android:singleLine="true"
            android:textSize="25sp"
            android:padding="15dp"
            android:background="@drawable/edittext_back"
            android:fontFamily="@font/comic_neue_bold"
            android:layout_width="1000px"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"/>

        <EditText
            android:id="@+id/passwordREGISTER"
            android:hint="Password"
            android:textSize="25sp"
            android:padding="15dp"
            android:singleLine="true"
            android:drawableRight="@drawable/ic_eye_close"
            android:drawablePadding="5dp"
            android:inputType="textPassword"
            android:background="@drawable/edittext_back"
            android:fontFamily="@font/comic_neue_bold"
            android:layout_width="1000px"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/createREGISTER"
            style="@style/Button.Purp"
            android:text="CREATE"
            android:textSize="30dp"
            android:layout_margin="10dp"
            android:background="@drawable/button_back"
            android:layout_width="1000px"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="1000px"
            android:layout_height="wrap_content"
            android:gravity="center"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ALREADY HAVE AN ACCOUNT? "
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/loginREGISTER"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LOG IN"
                android:textColor="#01C1FD"
                android:textAlignment="center"
                android:textSize="18sp"
                />

        </LinearLayout>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>